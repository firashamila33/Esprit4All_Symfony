{% trans_default_domain 'FOSUserBundle' %}
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <form  action="{{ path("fos_user_security_check") }}" method="post">
            {% if csrf_token %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            {% endif %}
                    <label>{{ 'security.login.username'|trans }}</label>
                    <p><input id="username" type="text" value="{{ last_username }}" name="_username" required="required" placeholder="Username"></p>
                    <label>{{ 'security.login.password'|trans }}</label>
                    <p><input type="password" id="password" name="_password" required="required" placeholder=".............." /></p>

            <div class="row">
                &nbsp;&nbsp;&nbsp;&nbsp; <input type="checkbox" id="remember-me" />
                &nbsp; <label for="remember-me">{{ 'security.login.remember_me'|trans}}</label>
            </div>&nbsp;
            <div class="row">
                &nbsp;&nbsp;&nbsp;&nbsp;<input type="submit" class="btn" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
            </div>

        </form>


