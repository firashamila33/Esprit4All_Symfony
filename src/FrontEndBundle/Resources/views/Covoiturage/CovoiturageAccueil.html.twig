{% block body %}
    <section id="slider">
        <div class="static-banner relative">
            <div class="overlay blue-overlay-5"></div>
            <div class="page-head">
                <h2 class="page-title">Covoiturage</h2>
                <ul class="page-title-btn">
                    <li><a href="http://www.codepixar.com/educare/php/01-home-university.php" target="_blank">Home <i
                                    class="fa fa-caret-right" aria-hidden="true"></i></a></li>
                    <li><a href="#" class="active">Covoiturage</a></li>
                </ul>
            </div>
        </div>
    </section>
    <section class="section-full">
        <form method="get" action="{{ path('front_end_cherchercovoiturage') }}">
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <div class="event-filter flex">
                        <div class="single-filter ft-330">
                            <input placeholder="Départ" name="depart" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Départ'" type="text">
                        </div>
                        <div class="single-filter ft-360">
                            <input placeholder="Destination" name="arrive" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Destination'" type="text">
                        </div>
                        <div class="single-filter ft-135 mr-n">
                            <button type="submit" class="btn month">Chercher trajet</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </form>
    </section>
    <section class="cta-1 cta2 cta3">
        <div class="cta-bg2 relative"  data-velocity=".2">
            <div class="overlay cta-overlay-bg-blue"></div>
            <div class="container">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="cta-content">
                            <h2>Plusieurs personnes ont déjà essayé nos services, pourquoi pas vous?</h2>
                            <form action="#" class="cta-register">
                                <div class="row">
                                    <div class="media-left" style="width: auto;padding:50px 0px 50px 50px;">
                                        <img style="border:3px solid white" src="{{ asset('img/course/t1.jpg') }}">
                                    </div>
                                    <div class="media-right" style="padding: 50px;">
                                        <h2>Vous prenez le volant bientôt?</h2>
                                        <h3>Partager vos frais en prenant des passagers</h3>
                                    </div>
                                </div>
                                <div class="row">
                                    <p class="text-center">
                                        <button type="submit" class="submit-btn" formaction="{{ path('front_end_verscovoiturage') }}">Proposer un trajet</button>
                                    </p>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock body %}